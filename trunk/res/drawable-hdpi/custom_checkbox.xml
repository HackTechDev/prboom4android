<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item 
 		android:state_checked="true"
 		android:state_enabled="true"
       	android:drawable="@drawable/doom_checked" /> <!-- checked -->
 	<item 
 		android:state_checked="false"
 		android:state_enabled="true"
       	android:drawable="@drawable/doom_unchecked" /> <!-- unchecked -->
    <item
    	android:state_checked="true"
    	android:state_enabled="false"
    	android:drawable="@drawable/doom_checked_disabled" /> <!-- checked & disabled -->
 	<item 
 		android:state_checked="false"
 		android:state_enabled="false"
       	android:drawable="@drawable/doom_unchecked_disabled" /> <!-- unchecked & disabled -->
</selector>